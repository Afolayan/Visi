<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcedar.visinaas">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Sync -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <!-- Sync Service -->

    <permission
        android:name="com.jcedar.visinaas.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.jcedar.visinaas.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_user"
        android:installLocation="auto"
        android:label="@string/app_name"
        android:name=".app.VisiBook"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Gardener">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name=".provider.DataProvider"
            android:authorities="com.jcedar.visinaas.provider"
            android:exported="false"
            android:syncable="true" />

        <activity
            android:name=".ui.DashboardActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ui." />
            </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".ui.FbActivity"
            android:label="Visibook">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name=".ui.PicViewActivity"
            android:label="@string/title_activity_pic_view"
            android:parentActivityName=".ui.DashboardActivity">

            <!--
                <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jcedar.visinaas.ui.Dashboard" />
            -->
        </activity>
        <activity
            android:name=".ui.StudentDetailsActivity"
            android:label="@string/title_activity_student_details">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.com.jcedar.visinaas.provider.students_chapter" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AllStudentDetailsActivity"
            android:label="@string/title_activity_all_student_details">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.com.jcedar.visinaas.provider.students" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ProfileActivity"
            android:label="@string/title_activity_profile" />

        <receiver
            android:name=".gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.programmingtechniques.gcmdemo" />
            </intent-filter>
        </receiver>

        <service android:name=".gcm.GcmIntentServices" />

        <activity
            android:name=".ui.SearchActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gardener"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>


        </activity>
        <activity
            android:name=".ui.Details"
            android:label="@string/title_activity_details"
            android:parentActivityName=".ui.DashboardActivity"
            android:theme="@style/Theme.Gardener">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.DashboardActivity" />
        </activity>
        <activity
            android:name=".ui.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Gardener" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.DashboardActivity" />
            </activity>
                <activity
            android:name=".ui.Preference"
            android:label="@string/title_activity_preference"
            android:theme="@style/Theme.Gardener"/>
    </application>

</manifest>
