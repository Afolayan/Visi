<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- &lt;!&ndash; Base application theme. &ndash;&gt;
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
    </style>-->
    <style name="Fade">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="LoginHelpText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="cardTextView1">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cardTextView2">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="cardTextView3">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#fff</item>
    </style>


    <!--For FAB-->

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/green</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/green</item>
        <item name="android:colorAccent">@color/green</item>
        <item name="android:colorControlHighlight">@color/green</item>
    </style>

    <style name="FloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/fab_background</item>
        <item name="android:stateListAnimator">@anim/fab_state_list_animator</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="FloatingActionButton.Mini">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Gardener.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Gardener.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColorHint">@color/green</item>
        <item name="android:actionBarSize">30dp</item>
    </style>
</resources>
