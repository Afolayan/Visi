<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:id="@+id/scroll_view_child"
    android:clipToPadding="false"
    android:tag="main"
    android:transitionName="content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/general_toolbar"></include>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <com.jcedar.visinaas.ui.view.ObservableScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_weight="50"
                android:fillViewport="true"
                android:overScrollMode="never">

                <LinearLayout
                    android:id="@+id/cum_details"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/content_padding_normal"
                    android:showDividers="middle"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name: "
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_seventeen"
                            android:id="@+id/n" />
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textSize="@dimen/text_size_sixteen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp" >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chapter:"
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_seventeen"
                            android:id="@+id/c" />
                        <TextView
                            android:id="@+id/tv_chapter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textSize="@dimen/text_size_sixteen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gender:"
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_seventeen"
                             />
                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textSize="@dimen/text_size_sixteen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Credit Point"
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_seventeen" />
                        <TextView
                            android:id="@+id/tv_cum_tcp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textSize="@dimen/text_size_sixteen" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Course Unit: "
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_seventeen"  />
                        <TextView
                            android:id="@+id/tv_cum_tcu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textSize="@dimen/text_size_sixteen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GPA: "
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_seventeen" />
                        <TextView
                            android:id="@+id/tv_cum_gpa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textSize="@dimen/text_size_sixteen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CGPA: "
                            android:layout_weight="2"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_seventeen"  />
                        <TextView
                            android:id="@+id/tv_cum_cgpa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="  "
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textSize="@dimen/text_size_sixteen"/>
                    </LinearLayout>

                </LinearLayout>
            </com.jcedar.visinaas.ui.view.ObservableScrollView>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>



